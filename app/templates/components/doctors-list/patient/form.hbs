<form {{action 'updatePatient' on='submit'}}>
  {{input placeholder="Patient Name" value=patient.name type='text' required=true}}<br>
  {{input placeholder="Patient Age" value=patient.age type='number' required=true}}<br>
  {{input placeholder="Patient Weight" value=patient.weight type='number' required=true}}<br>
  {{input placeholder="Patient Glucose Level" value=patient.glucose type='number' required=true}}<br>
  {{input placeholder="Patient Test Type" value=patient.test type='text' required=true}}<br>
  <button class='btn-xs btn-info' type='submit'>Save Patient</button>
{{#if editForm}}
  <button {{action 'cancel'}}>Cancel</button>
  {{/if}}
</form>
