<form {{action 'updateDoctor' doctor on='submit'}}>
  <label>Name</label>{{input class="form-control" type="text" value=doctor.name required=true}}<br>
  <label>Specialty</label>{{input class="form-control" type="text" value=doctor.specialty required=true}}<br>
  <label>Hospital</label>{{input class="form-control" type="text" value=doctor.hospital required=true}}<br>
  <label>Location</label>{{input class="form-control" type="text" value=doctor.location required=true}}<br>
  <button class='btn btn-primary' type='submit'>Submit</button>
  <button class='btn btn-light' {{action 'toggleEditing'}}>Cancel</button>
</form>
